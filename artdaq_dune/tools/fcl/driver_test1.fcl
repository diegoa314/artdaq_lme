# FHiCL document used to run the "driver" executable. To learn more
#  about the FHiCL language, please look at
#  cdcvs.fnal.gov/redmine/documents/327 , the "FHiCL Quick Start Guide"

events_to_generate: 10000
run_number: 101
debug_cout: true
transition_timeout: 30

services: {
    TimeTracker: {}
}

fragment_receiver: {

   # Parameters defining and configuring the fragment generator to be used
   		    
   generator: ToySimulator 
   fragment_type: TOY2        # Make sure downstream modules know about this fragment_type!
   nADCcounts: 524268         # nBytes = nADCcounts * 2 + 40, 1 MB
   distribution_type: 3
   throttle_usecs: 0
   random_seed: 6514

   # Parameters configuring the fragment generator's parent class
   # artdaq::CommandableFragmentGenerator

   fragment_id: 0
   board_id: 0
}  		  

event_builder: {

  expected_fragments_per_event: 1
max_fragment_size_bytes: 0x200000
buffer_count: 20  
use_art: true
  print_event_store_stats: false
  verbose: false
  events_expected_in_SimpleQueueReader: @local::events_to_generate
  send_requests: false
}

######################################################################
# The ART code
######################################################################

physics:
{
  analyzers:
  {
    printBuildInfo: {
      module_type: PrintBuildInfo
      buildinfo_module_label: BuildInfo
      buildinfo_instance_label: ArtdaqDemo
    }
  }

  producers:
  {
  BuildInfo:
  {
       module_type: ArtdaqDemoBuildInfo
       instance_name: ArtdaqDemo
   }
  }

  p1: [ BuildInfo ]
  a1: [ printBuildInfo ]

  my_output_modules: [ rootout ]
}

outputs:
{

 rootout:
  {
    module_type: RootOutput
    fileName: "driver_test1.root"
    fastCloning: false
    compressionLevel: 0
  }

}

source:
{
module_type: DemoInput
waiting_time: 900
resume_after_timeout: true
}

process_name: Driver



